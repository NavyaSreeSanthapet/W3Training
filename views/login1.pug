html
    head
        title Signup
    body
        if message
            h4 #{message}
        form(action="/login" method="POST")
            p username:
                input(name="username" type="text" required )
            p password:
                input(name="password" type="password" required)
            button(type="submit") Login
            p new user ! register #[a(href="/register") here]
